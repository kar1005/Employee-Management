<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Employee Management System</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLteT/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/summernote/summernote-bs4.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/AdminLteT/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLteT/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLteT/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="AdminLteT/dist/css/adminlte.min.css">

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/AdminLteT/dist/img/avatarOfEmployees.jpg" alt="preloaderimage" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
                @* <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li> *@
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
           
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
                @* <img src="" alt="brandlogo" class="brand-image img-circle elevation-3" style="opacity: .8"> *@
                <span class="brand-text font-weight-heavy">Employee Management <br />System</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item ">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    @* <i class="right fas fa-angle-left"></i> *@
                                </p>
                            </a>
                            
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Employees" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-users-line"></i>
                                <p>
                                    Employees
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Departments" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-building-user"></i>
                                <p>
                                    Departments
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Supervisors" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-user"></i>
                                <p>
                                    Supervisors
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Jobs" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-person-walking-luggage"></i>
                                <p>
                                    Jobs
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Bios" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-clipboard"></i>
                                <p>
                                    Bio Data
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Countries" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-flag"></i>
                                <p>
                                    Countries
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Ratings" asp-action="Index" class="nav-link">
                                <i class="fa-solid fa-star"></i>
                                <p>
                                    Perfomance Ratings
                                </p>
                            </a>
                        </li>                        
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Dashboard</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year <a href="">CE022 and CE041</a>.</strong>
            All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLteT/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminLteT/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLteT/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/AdminLteT/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminLteT/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/AdminLteT/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/AdminLteT/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/AdminLteT/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/AdminLteT/plugins/moment/moment.min.js"></script>
    <script src="~/AdminLteT/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="AdminLteT/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLteT/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/AdminLteT/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>

    <!-- jQuery -->
    <script src="~/AdminLteT/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLteT/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables  & Plugins -->
    <script src="~/AdminLteT/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminLteT/plugins/jszip/jszip.min.js"></script>
    <script src="~/AdminLteT/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/AdminLteT/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/AdminLteT/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/AdminLteT/plugins/datatables-buttons/js/buttons.print.min.js"></script>
   
    <!-- AdminLTE App -->
    <script src="~/AdminLteT/dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
   @*  <script src="~/dist/js/demo.js"></script> *@
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminLteT/dist/js/pages/dashboard.js"></script>
    <script src="~/AdminLteT/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminLteT/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLteT/js/site.js" asp-append-version="true"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, 
            "lengthChange": false, 
            "autoWidth": false, 
            "searching": false,  // Disables the search functionality
            "paging": false,     // Disables pagination (previous/next buttons)
            "info": false,       // Disables the information ("Showing X of Y entries")
            "ordering": false,   // Disables sorting on all columns
            "buttons": ["copy", "excel", "pdf", "print"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>

    
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
